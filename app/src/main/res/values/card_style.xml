<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="card_text_bold" parent="card_text_extras">
        <item name="android:textStyle">bold</item>
        <item name="autoSizeMaxTextSize">32sp</item>
        <item name="autoSizeMinTextSize">18sp</item>
    </style>
    <style name="card_text_normal" parent="card_text_extras">
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeMinTextSize">18sp</item>
    </style>
    <style name="card_text_extras">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/black_torre</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="card_background">
        <item name="cardBackgroundColor">@color/green_torre</item>
        <item name="cardCornerRadius">40dp</item>
        <item name="cardElevation">10dp</item>
    </style>
</resources>