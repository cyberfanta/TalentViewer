<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="authorBackground">
        <item name="android:background">@color/soft_black_37</item>
    </style>

    <style name="authorCardBackground">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="authorImageView">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="srcCompat">@drawable/cara_marca_personal</item>
    </style>

    <style name="authorTextView1">
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeMinTextSize">20sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/soft_black_37</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="authorTextView2">
        <item name="android:layout_width">120dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/soft_black_37</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>