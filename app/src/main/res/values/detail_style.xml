<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="detail_text_bold" parent="detail_text_extras">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
    </style>
    <style name="detail_text_normal" parent="detail_text_extras">
        <item name="android:textSize">16sp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeMinTextSize">10sp</item>

    </style>
    <style name="detail_text_normal_footer" parent="detail_text_extras">
        <item name="android:textSize">14sp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
    </style>
    <style name="detail_text_extras">
        <item name="android:textColor">@color/black_torre</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:text">@string/content_description_empty</item>
    </style>
    <style name="detail_text_container">
        <item name="android:background">@drawable/background_green_black_border</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>

    <style name="detail_scrollview_container">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="detail_scrollview_container_base">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/black_torre</item>
    </style>

    <style name="detail_scrollview_container_top" parent="detail_scrollview_container_base">
        <item name="android:background">@drawable/background_green_black_border_top</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="detail_scrollview_container_middle" parent="detail_scrollview_container_base">
        <item name="android:background">@drawable/background_gray_black_border_middle</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="detail_scrollview_container_middle_dark" parent="detail_scrollview_container_base">
        <item name="android:background">@drawable/background_green_black_border_middle_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_scrollview_container_bottom" parent="detail_scrollview_container_base">
        <item name="android:background">@drawable/background_gray_black_border_bottom</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>