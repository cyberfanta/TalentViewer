                android:right="1dp"
                android:top="1dp" />

            <solid android:color="@color/gray_torre" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="@color/gray_torre" />

            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/gray_torre"
                android:centerX="60%"
                android:endColor="@color/gray_torre"
                android:startColor="@color/gray_torre"
                android:type="linear"
                />
            <stroke
                android:width="2dp"
                android:color="@color/black_torre"
                />
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
</layer-list>